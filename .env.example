# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=saappsupport@iiti.ac.in
SMTP_PASS=
SMTP_FROM=HMS <saappsupport@iiti.ac.in>

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# AuthZ runtime mode controls
# AUTHZ_MODE: off | observe | enforce
AUTHZ_MODE=enforce
# Comma-separated keys that enforce even when AUTHZ_MODE=observe.
# Kept as * so observe-mode fallback still enforces all keys if mode is switched back.
AUTHZ_ENFORCE_ROUTE_KEYS=*
AUTHZ_ENFORCE_CAPABILITY_KEYS=*
# Enable deny-preview logs while in observe mode
AUTHZ_OBSERVE_LOG_DENIES=false

# AuthZ runtime smoke configuration (Phase 5/6)
AUTHZ_SMOKE_ENABLED=false
AUTHZ_SMOKE_BASE_URL=http://localhost:8000
AUTHZ_SMOKE_EXPECT_ENFORCE=false

# Operator/admin credentials used to apply temporary overrides
AUTHZ_SMOKE_OPERATOR_EMAIL=admin@example.com
AUTHZ_SMOKE_OPERATOR_PASSWORD=<set-operator-password>

# Phase 5 users
AUTHZ_SMOKE_SUPER_ADMIN_EMAIL=superadmin@example.com
